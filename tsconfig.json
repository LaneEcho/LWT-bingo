{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    // "moduleResolution": "node",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/client/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"],
  "files": ["declarations.d.ts"]
}
